<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="refresh_PullRefreshLayout">
        <attr name="refreshType" format="enum">
            <enum name="material" value="0"/>
            <enum name="circles" value="1"/>
            <enum name="water_drop" value="2"/>
            <enum name="ring" value="3"/>
            <enum name="smartisan" value="4"/>
        </attr>
        <attr name="refreshColors" format="reference"/>
        <attr name="refreshColor" format="reference"/>
        <attr name="not_pull_down" format="boolean"/>
    </declare-styleable>

    <!-- 评论commentListView -->
    <declare-styleable name="CommentListView">
        <attr name="item_color" format="color"/>
        <attr name="item_selector_color" format="color"/>
        <attr name="replay_textcolor" format="color"/>
        <attr name="cmtColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ArcProgressBar">
        <attr name="arc_radius" format="dimension"/>
        <attr name="arc_strokeWidth" format="dimension"/>
        <attr name="arc_backgroudcolor" format="reference"/>
        <attr name="arc_color" format="color"/>
        <attr name="arc_textcolor" format="color"/>
        <attr name="arc_textsize" format="dimension"/>
        <attr name="arc_text" format="string"/>
    </declare-styleable>

</resources>